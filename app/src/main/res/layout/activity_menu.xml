<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/indonesia"
    tools:context="com.example.raga.ujianuts.menu">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:src="@drawable/spalshscreen"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please choice"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/Image1"
                android:layout_width="151dp"
                android:layout_height= "100dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/cityscape"/>


            <ImageButton
                android:id="@+id/Image2"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/kota"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Image3"
                android:layout_marginTop="20dp"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/makanan"/>

            <ImageButton
                android:id="@+id/Image4"
                android:layout_marginTop="20dp"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/tour"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Image5"
                android:layout_marginTop="20dp"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/man"/>
            <ImageButton
                android:id="@+id/Image6"
                android:layout_marginTop="20dp"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/versi"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>



</LinearLayout>
